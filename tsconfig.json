{ 
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@": [ "src/*" ],
      "@/*": [ "src/*" ],
    }
  }
}
